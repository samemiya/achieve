<!--# コメント入力フォームをパーシャルで作成-->
<!--# Ajaxを実装 フォームの送信時にdata-remote: trueにする-->
<%= form_for([blog,comment], remote: true) do |f| %>
  <% if comment.errors.any? %>
    <div id="error_explanation">
      <h2><%= comment.errors.count %>件のエラーがあります。</h2>

      <ul>
      <% comment.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <%= f.hidden_field :blog_id %>
  <div class="field">
    <%= f.text_field :content, placeholder: "内容", class: "form-control" %>
  </div><br>
  <div class="actions">
    <%= f.submit '登録する', class:'btn btn-primary btn-block' %>
  </div>

<% end %>
