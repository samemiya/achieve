<div class="container">
  <div class="wrapper col-md-4 col-md-offset-4 col-sm-10">
    <!--<h2>Log in</h2>-->
    <h2>ログイン</h2>

    <%= alert %>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
      
      <div class="field">
        <!--<%= f.label :email %>-->
        <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "メールアドレス" %>
        <br />
      </div>
    
      <div class="field">
        <!--<%= f.label :password %>-->
        <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "パスワード" %>
        <br />
      </div>
    
      <% if devise_mapping.rememberable? -%>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :内容を記憶させる %>
          <!--<%= f.label :remember_me %>-->
        </div>
      <% end -%>
    
      <div class="actions">
        <!--<%= f.submit "Log in" %>-->
        <%= f.submit "ログイン", class: "btn btn-primary btn-block" %>
      </div>
    <% end %>
    
    <%= render "devise/shared/links" %>

  </div>
</div>