<div class="container">
  <div class="wrapper col-md-8 col-md-offset-2 col-sm-10">

    <h2>ユーザー情報の編集<br><%= resource_name.to_s.humanize %></h2>
    
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= devise_error_messages! %>
    
      <div class="field">
        <!--<%= f.label :email %><br />-->
        <!--<%= f.email_field :email, autofocus: true %>-->
        <%= f.label :メールアドレス %>
        <%= f.email_field :email, autofocus: true, class: "form-control" %>
      </div><br>
    
      <div class="field">
        <%= f.label :名前 %>
        <%= f.text_field :name, class: "form-control" %>
      </div><br>
    
      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <!--# DIVE14_SNSログイン で編集-->
      <div class="field">
        <%= f.label :現在のパスワード %><br />
        <!--<i>(we need your current password to confirm your changes)</i><br>-->
        <%= f.password_field :current_password, autocomplete: "off", class: "form-control" %>
      </div><br>
    
      <div class="field">
        <%= f.label :パスワードの変更 %><br>
        <i>変更したくない場合は空白のまま</i><br>
        <%= f.password_field :password, autocomplete: "off", class: "form-control"  %>
        <% if @minimum_password_length %><br>
        <em><%= @minimum_password_length %> 桁以上必須 </em>
        <% end %>
      </div><br>
    
      <div class="field">
        <%= f.label :パスワード（確認用） %><br>
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
      </div><br>
    
      <!--# DIVE14_SNSログイン で編集-->
      <!--# 画像をULする為の編集-->
      <div class="field">
        <%= profile_img(@user) if profile_img(@user) %>
        <%= f.file_field :avatar %>
        <%= f.hidden_field :avatar_cache %>
      </div>
    
      <div class="actions">
        <%= f.submit "更新", class: "btn btn-primary btn-block" %>
      </div>
    
    <% end %>
    
    <!--# DIVE14_SNSログイン で編集-->
    <!--omniauthでサインアップした時のみパスワード欄を非表示にする-->
    <% if @user.provider.blank? %>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>
    
      <div class="field">
        <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
        <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
      </div>
    
      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
      </div>
    
      <div class="field">
        <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
        <%= f.password_field :current_password, autocomplete: "off", class: "form-control" %>
      </div>

    <% end %>
    
    <h3>アカウントの削除</h3>
    
    <p>ご満足いただけませんでしたか？
    <%= button_to "クリックしてアカウントを削除", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %>
    </p>
    
    <%= link_to "戻る", :back %>

  </div>
</div>
