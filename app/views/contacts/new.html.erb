
<div class="container">
  <div class="wrapper col-md-8 col-md-offset-2 col-sm-10">
    <p><%= notice %></p>
    <h1>お問い合わせ投稿</h1>
    <%= form_for(@contact, url: confirm_contacts_path) do |f| %>
      <% if @contact.errors.any? %>
        <div id="error_explanation">
          <!--# バリデーションエラーの件数を表示します。-->
          <h2><%= @contact.errors.count %>件のエラーがあります。</h2>
    
          <ul>
          <!--# @blog.errorsは@blogをバリデーションした際のエラー情報です。-->
          <!--# full_messagesは複数のエラーメッセージを表します。-->
          <% @contact.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

<!--%= form_for(@contact) do |f| %>-->

      <%= f.label :お名前 %>
      <%= f.text_field :name, class:"form-control" %>
      <br>
      <%= f.label :メールアドレス %>
      <%= f.text_field :email, class:"form-control" %>
      <br>
      <%= f.label :お問い合わせ内容 %>
      <%= f.text_field :content, class:"form-control" %>
      <br>
      <%= f.submit '投稿', class:'btn btn-primary btn-block'%>
    <% end %>
  </div>
</div>
