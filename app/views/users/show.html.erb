<%# DIVE16_フォロー機能 で編集 %>
<%# 課題　フォローとフォロワーを表示する %>
<p id="notice"><%= notice %></p> 
<div class="child row">
  <div class="wrapper col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1">
    <h2>ユーザー詳細ページ</h2>
      <h4>
        <%= profile_img(@user) %>
        <%= "　" %>
        <%= @user.name %><br />
        <%= @user.email %>
      </h4>
      <br>
      <h4>フォローユーザー</h4>
      <% @user.followed_users.each do |user| %>
        <div class="row">
          <p><%= user.name %><%= "　" %><%= user.email %></p>
        </div>
      <% end %><br>
      <h4>フォロワーユーザー</h4>
      <% @user.followers.each do |user| %>
        <div class="row">
          <p><%= user.name %><%= "　" %><%= user.email %></p>
        </div>
      <% end %><br />
      
    <%= link_to '戻る', users_path %>

  </div>
</div>
