<%# DIVE16_フォロー機能 で編集 %>
<%# 課題　フォローとフォロワーを表示する %>
<p id="notice"><%= notice %></p> 
<div class="child row">%>
  <div class="wrapper col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1">
    <p>ユーザー詳細ページ</p>
      <p class="left"><strong>名前</strong></p>

      <h4>フォローユーザー</h4>
      <% @user.followed_users.each do |user| %>
        <div class="row">
          <p><%= user.email %></p>
        </div>
      <% end %><br>

      <h4>フォロワーユーザー</h4>
      <% @user.followers.each do |user| %>
        <div class="row">
          <p><%= user.email %></p>
        </div>
      <% end %>

    <%= link_to '戻る', users_path %>

  </div>
</div>
